@model MapMusic.BusinessLogic.Implementation.Event.Models.EditEventModel;

@{
    ViewData["Title"] = "CreateEvent";
}

<h1>Edit Event</h1>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditEvent" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display : none">
                <label asp-for="Id"></label>
                <input asp-for="Id" type="text" class="form-control" value="@Model.Id">
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="display : none">
                <label asp-for="OrganizerId"></label>
                <input asp-for="OrganizerId" type="text" class="form-control" value="@Model.OrganizerId">
            </div>
            <div>
                <p>Location</p>
                <input asp-for="LocationId" class="form-control hidden-input" id="forForm" value="@Model.LocationId"/>
                <input type="text" placeholder="Search.." id="myInput" onkeyup="LocationDropDownSearch()" value="@Model.LocationName" />
            </div>
            <div id="myDropdown" class="form-group dropdown-content">
            </div>
            <div class="form-group" id="MusicTypeSelector">
                <select id="MusicTypeId" asp-for="MusicTypeId" class="form-control" placeholder="MusicTypeId" asp-for="MusicTypeId"></select>
            </div>
            <div class="form-group">
                <p>Artists</p>
                <div id="MultiSelectArtists"></div>
                <div id="SelectedArtists"></div>
                <div id="SelectedArtistsIds">
                </div>
                @* <select id="Artists" asp-for="ArtistsId" class="form-control" placeholder="ArtistsId" asp-for="ArtistsId"></select>*@
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewProfilePhoto" class="control-label"></label>
                <input asp-for="NewProfilePhoto" type="file" class="form-control" />
                <span asp-validation-for="NewProfilePhoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input type="datetime-local" class="form-control" placeholder="StartDate" asp-for="StartDate">
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input type="datetime-local" class="form-control" placeholder="EndDate" asp-for="EndDate">
                <span asp-validation-for="EndDate" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<script type="text/javascript" src="~/js/MusicTypeSingleSelect.js"></script>
<script type="text/javascript" src="~/js/LocationDropDownSearch.js"></script>
<script type="text/javascript" src="~/js/MultiSelectArtists.js"></script>


<script type="text/javascript">
    SingleDropdown("MusicTypeSelector", @Model.MusicTypeId);
    MultiselectDropdown("MultiSelectArtists", @Html.Raw(JsonSerializer.Serialize(@Model.ArtistsId)));
</script>

<style>
    .dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
    }

    .hidden-input {
        display: none;
    }
</style>