@model MapMusic.BusinessLogic.Implementation.Location.Models.CreateLocationModel;

@{
    ViewData["Title"] = "CreateLocation";
}

<h1>CreateLocation</h1>
<script type="text/javascript" src="~/js/CreateLocation.js"></script>
<link rel="stylesheet" href="~/css/CreateLocationMap.css" />


<h4>Location</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateLocation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
                <div>Search Location: </div>
                <input id="search-input" type="text" placeholder="Search for a location">
                <div class="form-group" >
                    <input asp-for="Address" type="text" class="form-control" id="Address" style="height: 0px; width: 0px; visibility: hidden;" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            <div id="map">
            </div>
            <div class="form-group" style="display : none">
                <label asp-for="Latitude"></label>
                <input asp-for="Latitude" type="text" class="form-control" id="Latitude">
            </div>
            <div class="form-group" style="display : none">
                <label asp-for="Longitude"></label>
                <input asp-for="Longitude" type="text" class="form-control" id="Longitude">
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDskCuIVFMekGb0wTiOp1d7NjXCzKnM6BU&libraries=places&callback=initMapFromCreateLocation" defer>
</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


