@model MapMusic.BusinessLogic.Implementation.Account.Models.RegisterOrganizerModel;

<nav class="createAccountFormular">
    <ul class="accountsOptions">
        <li><a asp-controller="Account" asp-action="CreateUser">User</a></li>
        <li><a asp-controller="Account" asp-action="CreateArtist">Artist</a></li>
        <li>Organizer</li>
    </ul>
</nav>
<div class="page-header">
    <h1>Create Organizer Account</h1>
</div>

<div class="row">
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Please enter your credentials</h3>
            </div>
            <div class="panel-body">

                <form asp-route="CreateAccount">
                    <fieldset>
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <input class="form-control" placeholder="FullName" asp-for="FullName">
                            <span asp-validation-for="FullName" class="text-danger"></span>

                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input type="Email" class="form-control" placeholder="Email" asp-for="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="PasswordVerification" class="form-label"></label>
                            <input type="password" class="form-control" placeholder="PasswordVerification" asp-for="PasswordVerification">
                            <span asp-validation-for="PasswordVerification" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea class="form-control" placeholder="Description" asp-for="Description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary">CreateAccount</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>